@page "/"
@using AssetManagementApp.Services
@inject IDashboardService DashboardService
@rendermode InteractiveServer

<PageTitle>Dashboard - Asset Management System</PageTitle>

<h1 class="mb-4">
    <i class="bi bi-speedometer2 me-2"></i>Dashboard
</h1>

@if (loading)
{
    <div class="d-flex justify-content-center">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else if (stats != null)
{
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title">Total Assets</h5>
                            <h2 class="mb-0">@stats.TotalAssets</h2>
                        </div>
                        <i class="bi bi-laptop fs-1"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title">Available</h5>
                            <h2 class="mb-0">@stats.AvailableAssets</h2>
                        </div>
                        <i class="bi bi-check-circle fs-1"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title">Assigned</h5>
                            <h2 class="mb-0">@stats.AssignedAssets</h2>
                        </div>
                        <i class="bi bi-person-check fs-1"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title">Employees</h5>
                            <h2 class="mb-0">@stats.TotalEmployees</h2>
                        </div>
                        <i class="bi bi-people fs-1"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card bg-secondary text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title">Under Repair</h5>
                            <h2 class="mb-0">@stats.UnderRepairAssets</h2>
                        </div>
                        <i class="bi bi-tools fs-1"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title">Retired</h5>
                            <h2 class="mb-0">@stats.RetiredAssets</h2>
                        </div>
                        <i class="bi bi-archive fs-1"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-light text-dark h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title">Spare Assets</h5>
                            <h2 class="mb-0">@stats.SpareAssets</h2>
                        </div>
                        <i class="bi bi-box fs-1"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title">Warranty Expiring</h5>
                            <h2 class="mb-0">@stats.AssetsNearingWarrantyExpiry</h2>
                        </div>
                        <i class="bi bi-exclamation-triangle fs-1"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Assets by Type</h5>
                </div>
                <div class="card-body">
                    @if (stats.AssetsByType.Any())
                    {
                        @foreach (var item in stats.AssetsByType)
                        {
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span>@item.Key</span>
                                <span class="badge bg-primary">@item.Value</span>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">No assets found</p>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Assets by Condition</h5>
                </div>
                <div class="card-body">
                    @if (stats.AssetsByCondition.Any())
                    {
                        @foreach (var item in stats.AssetsByCondition)
                        {
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span>@item.Key</span>
                                <span class="badge bg-secondary">@item.Value</span>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">No assets found</p>
                    }
                </div>
            </div>
        </div>
    </div>
}

@code {
    private DashboardStats? stats;
    private bool loading = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            stats = await DashboardService.GetDashboardStatsAsync();
        }
        catch (Exception)
        {
            // Log error and show empty state
            stats = new DashboardStats();
        }
        finally
        {
            loading = false;
        }
    }
}
